@model AddToCompareListModel
@using Nop.Web.Models.Catalog;

@{
    var checkBoxId = "compare-list-checker_" + @Model.ProductId;
}

<div class="compare-products">
    @* <input type="button" value="@T("Products.Compare.AddToCompareList")" class="button-2 add-to-compare-list-button" />*@
    <span>Сравнить</span>        
    @Html.CheckBox(
        "compare-list-checker", 
        Model.IsInCompareList, 
        new { id=checkBoxId, value=@Model.ProductId })
</div>

<script type="text/javascript">
    $(function () {      
        $('#@checkBoxId').click(setClickToCompareCheckBox('@checkBoxId', '@Url.RouteUrl("AddProductToCompare")' ,'@Url.RouteUrl("RemoveProductFromCompareList")'));           
    });



</script>