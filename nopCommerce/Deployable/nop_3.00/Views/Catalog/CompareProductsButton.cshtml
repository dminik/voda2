@model AddToCompareListModel
@using Nop.Web.Models.Catalog;
<div class="compare-products">
    <input type="button" value="@T("Products.Compare.AddToCompareList")" class="button-2 add-to-compare-list-button" />
</div>

<script type="text/javascript">
    $(function () {
      


        $('.add-to-compare-list-button').click(function () {
            $.ajax({
                cache: false,
                type: 'POST',
                url: '@Url.RouteUrl("AddProductToCompare")',
                data: { productId: $('#@Html.FieldIdFor(model => model.ProductId)').val() },
                dataType: 'json',
                success: function (data) {
                    //alert(data);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(thrownError);
                }
            });
            return false;
        });
    });
</script>